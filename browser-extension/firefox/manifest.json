{
  "manifest_version": 2,
  "name": "Productivity Monkey - Browser Tracker",
  "version": "1.0.0",
  "description": "Tracks browser activity for Productivity Monkey productivity monitoring",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "idle",
    "webNavigation",
    "nativeMessaging",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "prodmon@example.com",
      "strict_min_version": "91.0"
    }
  }
}
