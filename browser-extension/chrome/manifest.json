{
  "manifest_version": 3,
  "name": "Productivity Monkey - Browser Tracker",
  "version": "1.1.0",
  "description": "Tracks browser activity for Productivity Monkey productivity monitoring",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "idle",
    "webNavigation",
    "nativeMessaging"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_matches": [
        "*://127.0.0.1/*",
        "*://localhost/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
