{
  "name": "prodmon",
  "version": "1.0.0",
  "description": "Productivity Monkey - Team productivity monitoring and analytics",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"tsc -w\" \"electron .\"",
    "build": "tsc && electron-builder",
    "build:tsc": "tsc",
    "build:client": "tsc && electron-builder",
    "build:client:mac": "tsc && electron-builder --mac",
    "build:client:win": "tsc && electron-builder --win",
    "build:client:linux": "tsc && electron-builder --linux",
    "build:server": "tsc && mkdir -p dist/server/public && cp -r src/server/public/* dist/server/public/",
    "agent": "node dist/agent/index.js",
    "dashboard": "electron .",
    "test": "jest",
    "server": "node dist/server/server.js",
    "server:dev": "concurrently \"tsc -w\" \"nodemon dist/server/server.js\"",
    "server:pm2:start": "pm2 start dist/server/server.js --name prodmon-server",
    "server:pm2:stop": "pm2 stop prodmon-server",
    "server:pm2:restart": "pm2 restart prodmon-server",
    "server:pm2:delete": "pm2 delete prodmon-server",
    "server:pm2:logs": "pm2 logs prodmon-server",
    "server:pm2:status": "pm2 status prodmon-server",
    "postinstall": "electron-rebuild"
  },
  "keywords": [
    "productivity",
    "monitoring",
    "analytics"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^3.0.6",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "get-windows": "^9.2.3",
    "google-auth-library": "^10.4.0",
    "jsonwebtoken": "^9.0.2",
    "sql.js": "^1.10.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@types/better-sqlite3": "^7.6.8",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.6",
    "@types/sql.js": "^1.4.9",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "electron": "^38.2.2",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.prodmon.app",
    "productName": "Productivity Monkey",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "ui/**/*",
      "node_modules/**/*",
      "package.json",
      "src/server/public/**/*"
    ],
    "mac": {
      "target": {
        "target": "dmg",
        "arch": ["universal"]
      },
      "category": "public.app-category.productivity",
      "artifactName": "Productivity-Monkey-${version}.${ext}"
    },
    "win": {
      "target": "nsis",
      "artifactName": "Productivity-Monkey-Setup-${version}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage"
        },
        {
          "target": "deb"
        }
      ],
      "category": "Utility"
    },
    "deb": {
      "artifactName": "productivity-monkey_${version}_${arch}.${ext}"
    },
    "appImage": {
      "artifactName": "Productivity-Monkey-${version}.${ext}"
    }
  }
}
